/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2836", "brcm,bcm2835";
    fragment@0 {
        target = <&spidev0>;
        __overlay__ {
            status = "disabled";
        };
    };
    fragment@1 {
        target = <&spi0>;
            __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            ade9078@0 {
                compatible = "adi,ade9078";
                reg = <0>;
                spi-max-frequency = <1000000>;
		interrupts = <2 2>;
		interrupt-parent = <&gpio>;
		adi,wf-cap-sel = <0x1>;
		adi,wf-mode = <0x0>;
		adi,wf-src = <0x3>;
		adi,wf-in-en = <0x0>;
            };
                };
        };
};
